<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Asisten Dosen</title>
    <link rel="stylesheet" href="/includes/css/css dosen lab/asistendosen.css">
    <script>
        function openAsistenDosen() {
            window.location.href = '/AsistenDosen';
        }

        function openMatakuliah() {
            window.location.href = '/Matakuliah';
        }

        function openProfileDosen() {
            window.location.href = "/profil-dosen";
        }

        function openHomeDosen() {
            window.location.href = "/home-dosen";
        }

        function openJadwalViews() {
            window.location.href = "/jadwal-views";
        }
    </script>
</head>

<body>
    <!-- Navigation Bar -->
    <div class="navRectangle">
        <nav class="navigationBar">
            <div id="borderNavHomeAsdos">
                <a href="#" class="navigationHomeAsdos" onclick="openHomeDosen()">
                    <img src="/includes/images/home icon.png" alt="Navigation Home">
                    <span>Home</span>
                </a>
            </div>

            <div id="borderNavProfileAsdos">
                <a href="#" class="navigationProfileAsdos" onclick="openProfileDosen()">
                    <img src="/includes/images/profile navigation icon.png" alt="Navigation Profile Asdos">
                    <span>Profile</span>
                </a>
            </div>

            <div id="borderNavMataKuliah">
                <a href="#" class="navigationMataKuliah" onclick="openMatakuliah()">
                    <img src="/includes/images/icon daftar asdos.png" alt="Navigation Mata Kuliah">
                    <span>Mata Kuliah</span>
                </a>
            </div>

            <div id="borderNavJadwalAsdos">
                <a href="#" class="navigationJadwalAsdos" onclick="openAsistenDosen()">
                    <img src="/includes/images/icon jadwal.png" alt="Navigation Jadwal Asdos">
                    <span>Jadwal</span>
                </a>
            </div>

            <div id="borderNavLogOutAsdos">
                <a href="login-asdos.html" class="navigationLogOutAsdos">
                    <img src="/includes/images/log out.png" alt="Navigation Logout Asdos">
                    <span>Logout</span>
                </a>
            </div>
        </nav>
    </div>
    <!-- Navigation Bar -->

    <h2 style="color: white;">
        <center>Asisten Dosen :</center>
    </h2>
    <div class="master">
        <div class="container">
            <table>
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Nama</th>
                        <th>Keterangan</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    <% subjects.forEach((subject, index) => { %>
                      <!-- Check if there are users assigned to the subject -->
                      <% if (subject.users && subject.users.length > 0) { %>
                        <!-- Iterate through each user and display their name in a new row -->
                        <% subject.users.forEach((user, userIndex) => { %>
                          <tr>
                            <!-- Display a unique index for each row, including rows for user names -->
                            <td><%= userIndex + 1 %></td>
                            <td><%= user.name %></td>
                            <td><%= subject.title %></td>
                            <td><button onclick="openJadwalViews()">Jadwal</button></td>
                          </tr>
                        <% }); %>
                      <% } else { %>
                        <!-- If no users assigned, display a message in the first column -->
                        <tr>
                          <td><%= index + 1 %></td>
                          <td colspan="4">No users assigned</td>
                        </tr>
                      <% } %>
                    <% }); %>
                  </tbody>
                  
            </table>
        </div>
    </div>
</body>

</html>
