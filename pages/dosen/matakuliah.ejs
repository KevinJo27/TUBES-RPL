                    <span>Jadwal</span>
                </a>
            </div>

            <div id="borderNavLogOutAsdos">
                <a href="login-asdos.html" class="navigationLogOutAsdos">
                    <img src="/includes/images/log out.png" alt="Navigation Logout Asdos">
                    <span>Logout</span>
                </a>
            </div>
        </nav>
    </div>

    <!-- Navigation Bar -->
    <h2 style="color: white;">
        <center>Mata Kuliah :</center>
    </h2>
    <div class="master">
        <div class="container">
            <table>
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Nama MataKuliah</th>
                        <th>Jumlah Asisten</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Pemrograman Berbasis Web</td>
                        <td>4</td>
                        <td>
                            <span class="material-icons-outlined" onclick="showEditPopup(1)">edit</span>
                            <span class="material-icons-outlined" onclick="showDeletePopup(1)">delete</span>
                        </td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Pemrograman Berorientasi Objek</td>
                        <td>3</td>
                        <td>
                            <span class="material-icons-outlined" onclick="showEditPopup(2)">edit</span>
                            <span class="material-icons-outlined" onclick="showDeletePopup(2)">delete</span>
                        </td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td>Algoritma dan Struktur Data</td>
                        <td>4</td>
                        <td>
                            <span class="material-icons-outlined" onclick="showEditPopup(3)">edit</span>
                            <span class="material-icons-outlined" onclick="showDeletePopup(3)">delete</span>
                        </td>
                    </tr>
                </tbody>

            </table>
            <div class="upload-button">
                <button onclick="showPopup()">Upload</button>
            </div>
        </div>
    </div>

    <!-- Upload Pop-up -->
    <div class="overlay" id="overlay" onclick="hidePopup()"></div>
    <div class="upload-popup" id="popup">
        <div class="nama-mk">
            <label for="namaMK">Nama MataKuliah :</label>
            <input type="text" id="namaMK" placeholder="Isi Nama MataKuliah" style="margin-bottom: 10px;">
        </div>
        <div class="jumlah-asisten">
            <label for="jumlahAsisten">
                Jumlah Asisten :
            </label>
            <select id="jumlahAsisten">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
        <div class="button-container">
            <button id="cancel-button" onclick="hidePopup()">Cancel</button>
            <button id="submit-button" onclick="uploadData()">Submit</button>
        </div>
    </div>


    <!-- Edit Pop-up -->
    <div class="overlay" id="edit-overlay" onclick="hidePopup()"></div>
    <div class="edit-popup" id="edit-popup">
        <div class="jumlah-asisten">
            <label for="jumlahAsisten">
                Jumlah Asisten :
            </label>
            <select id="jumlahAsisten">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
        <div class="button-container">
            <button id="cancel-button" onclick="hideEditPopup()">Cancel</button>
            <button id="save-button" onclick="saveData()">Save</button>
        </div>
    </div>

    <!-- Delete Pop-up -->
    <div class="delete-overlay" id="deleteOverlay" onclick="hideDeletePopup()"></div>
    <div class="delete-popup" id="deletePopup">
        <div class="delete-message">
            <p>Apakah Anda yakin ingin menghapus catatan ini?</p>
        </div>
        <div class="delete-buttons">
            <button id="cancel-delete-button" onclick="hideDeletePopup()">Cancel</button>
            <button id="confirm-delete-button" onclick="deleteRow()">Delete</button>
        </div>
    </div>

    <script src="/includes/js/Dosen/matakuliah.js"></script>
</body>

</html>